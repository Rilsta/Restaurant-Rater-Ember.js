<h1>{{restaurant.restaurantName}}</h1>
<img src={{restaurant.image}} alt="" />
<ul>
  <li>{{restaurant.address}}</li>
  <li>{{restaurant.phone}}</li>
</ul>

<button {{action 'addToFavorites' restaurant}}>Add To Favorites</button>

<ul>
  {{#each restaurant.comments as |comment|}}
    {{comment-tile comment=comment update="update" destroyComment="destroyComment"}}
  {{/each}}
</ul>
